<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuChefCuisine">

    <TextView
        android:id="@+id/titre"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:text="PLAT A AJOUTER AU SERVICE"
        android:gravity="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintLeft_toLeftOf="@+id/titre" />

    <TextView
        android:id="@+id/aPrix"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="PRIX"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintLeft_toLeftOf="@+id/spinner" />

    <EditText
        android:id="@+id/EditPrix"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/aPrix"
        app:layout_constraintLeft_toLeftOf="@+id/aPrix" />

    <TextView
        android:id="@+id/aQtt"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="QUANTITE"
        app:layout_constraintTop_toBottomOf="@+id/EditPrix"
        app:layout_constraintLeft_toLeftOf="@+id/EditPrix" />

    <EditText
        android:id="@+id/EditQtt"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/aQtt"
        app:layout_constraintLeft_toLeftOf="@+id/aQtt" />


    <Button
        android:id="@+id/btnAjout"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:text="AJOUTER"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/EditQtt"
        app:layout_constraintLeft_toLeftOf="@+id/EditQtt" />

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="ANNULER"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnAjout"
        app:layout_constraintLeft_toLeftOf="@+id/btnAjout" />



</androidx.constraintlayout.widget.ConstraintLayout>