<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AfficheAffect">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L'affectation choisie"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textServeur"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:text="Serveur :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/serveur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/textServeur"
            android:inputType="text" />


        <TextView
            android:id="@+id/textTable"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Table :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/textServeur"/>

        <Spinner
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/textTable"
            android:inputType="text" />
        <Button
            android:id="@+id/btnEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table"
            android:layout_marginTop="75dp"
            android:text="Modifier"
            android:textSize="25sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSupprimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Supprimer"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@id/btnEnregistrer"
            />

        <Button
            android:id="@+id/btnQuitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Quitter"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@id/btnSupprimer"
            />


    </RelativeLayout>
</ScrollView>