<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuChefCuisine">

    <TextView
        android:id="@+id/titre"
        android:layout_width="202dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:text="Bienvenue !"
        android:gravity="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlats"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:text="Gérer les plats"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintLeft_toLeftOf="@+id/titre" />



    <Button
        android:id="@+id/btnService"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Affecter aux services"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnPlats"
        app:layout_constraintLeft_toLeftOf="@+id/btnPlats" />

    <Button
        android:id="@+id/btnQtt"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Gérer les quantités"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnService"
        app:layout_constraintLeft_toLeftOf="@+id/btnService" />




</androidx.constraintlayout.widget.ConstraintLayout>