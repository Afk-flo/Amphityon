<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plats">


    <TextView
        android:id="@+id/titleFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Les plats"
        android:visibility="visible"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="75dp"
        app:layout_constraintTop_toTopOf="50dp"

        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/liste"
        android:layout_width="409dp"
        android:layout_height="450dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleFood"
        />

    />

    <Button
        android:id="@+id/buttonIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrÃ©er un plat"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="627dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonQuitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liste"/>

    />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="627dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonIN"
        app:layout_constraintTop_toTopOf="@+id/buttonIN"/>
    />

</androidx.constraintlayout.widget.ConstraintLayout>