<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlatUnique">


    <TextView
        android:id="@+id/titleFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Plat unique"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NomInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nom du plat"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/titleFood"
        app:layout_constraintTop_toBottomOf="@+id/titleFood" />

    <EditText
        android:id="@+id/NomEdition"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/NomInfo"
        app:layout_constraintTop_toBottomOf="@+id/NomInfo" />

    <TextView
        android:id="@+id/DescriptionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        android:text="Description du plat"
        app:layout_constraintLeft_toLeftOf="@+id/NomEdition"
        app:layout_constraintTop_toBottomOf="@+id/NomEdition" />

    <EditText
        android:id="@+id/DescriptionEdition"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/DescriptionInfo"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionInfo" />

    <Button
        android:id="@+id/buttonSuppression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="8dp"

        android:text="SUPPRIMER"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSauvegarde"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionEdition" />

    <Button
        android:id="@+id/buttonSauvegarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="SAUVEGARDER"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSuppression"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionEdition" />


</androidx.constraintlayout.widget.ConstraintLayout>